@model Active

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Редактировать запись в таблице "Актив"</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="ISIN_id"></label>
			<input asp-for="ISIN_id" class="form-control" />
			<span asp-validation-for="ISIN_id" class="text-danger"></span>
		</div>
			<div class="mb-3">
			<label asp-for="Ticker"></label>
			<input asp-for="Ticker" class="form-control" />
			<span asp-validation-for="Ticker" class="text-danger"></span>
		</div>
			<div class="mb-3">
			<label asp-for="TypeOfActive_id"></label>
			<div>
				@Html.DropDownListFor(m => m.TypeOfActive_id, new SelectList(ViewBag.Type, "TypeOfActive_id", "Type"), htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.TypeOfActive_id)
			</div>
		</div>
			<div class="mb-3">
			<label asp-for="TradingMode"></label>
			<input asp-for="TradingMode" class="form-control" />
			<span asp-validation-for="TradingMode" class="text-danger"></span>
		</div>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Применить</button>
		<a asp-controller="Active" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Назад
		</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

